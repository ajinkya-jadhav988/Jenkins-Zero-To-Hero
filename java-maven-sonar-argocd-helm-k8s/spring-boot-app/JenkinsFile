pipeline {

  agent {
    docker {
      image 'docker:24.0.6'
      args "-u root -v /var/run/docker.sock:/var/run/docker.sock"
    }
  }

  options {
    skipDefaultCheckout(true)
    disableConcurrentBuilds()
  }

  environment {
    DOCKER_USER = "jadhavajinkya988"
    GIT_REPO_NAME = "Jenkins-Zero-To-Hero"
    GIT_USER_NAME = "ajinkya-jadhav988"
    SONAR_URL = "http://13.233.160.201:9000/"
  }

  stages {

    stage('Fix Workspace Permissions') {
      steps {
        sh '''
          echo "üîß Fixing workspace permissions..."
          chmod -R 777 "$WORKSPACE"
        '''
      }
    }

    stage('Checkout') {
      steps {
        git branch: 'main', url: "https://github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git"
      }
    }

    stage('Init Tools') {
      steps {
        sh '''
          echo "üì¶ Installing dependencies..."
          apk add --no-cache git maven openjdk17
          git --version
          mvn --version
          java --version
        '''
      }
    }

    stage('Build and Test') {
      steps {
        sh '''
          echo "üèó Building Java Project..."
          cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
          mvn clean package
        '''
      }
    }

    stage('Static Code Analysis') {
      steps {
        withCredentials([str]()
